<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_row_background">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete_sweep_white_24dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/textViewSessionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="-2dp"
            android:text="le nom"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textViewSessionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="la date"
            android:layout_below="@id/textViewSessionName"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/textViewSessionHeure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/textViewSessionName"
            android:paddingTop="-2dp"
            android:text="l'heure"
            android:textSize="14sp"
            />

    </RelativeLayout>
</FrameLayout>
